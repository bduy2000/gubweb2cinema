<h1><%-title%></h1>
<div class="containter">
    <h1>Add ShowTime</h1>
    <form action="/showtime/create" method="POST">
        <div class="mb-3">
        <label for="movie" class="form-label">Movie</label>
        <select class="form-select" aria-label="Default select example" id="movie" name="MovieId">
          <% movies.forEach(function(movie) { %>
          <option value="<%- movie.id %>"><%- movie.Name %></option>
          <%})%>
        </select>     
        </div>
       
        <div class="mb-3">
            <label for="theater" class="form-label">theater</label>
            <select class="form-select" aria-label="Default select example" id="theater" name="TheaterId">
              <% theaters.forEach(function(theater) { %>
              <option value="<%- theater.id %>"><%- theater.Name %></option>
              <%})%>
            </select>     
            </div>

            <div class="md-3">
                <label for="input_starttime">Time Begin</label>
                <input  type="time" id="input_starttime" name="timebegin" >
              </div>
              <div class="md-3">
                <label for="input_starttime">Time Finish</label>
                <input  type="time" id="input_starttime" name="timefinish" >
              </div>
              
              <div class="mb-3">
                <label for="price" class="form-label">Price</label>
                <input type="text" name="price" class="form-control" id="price">
              </div>
              <div class="md-3">
                <label for="input_starttime">Date Show</label>
                <input  type="date" id="input_starttime" name="dateshow" >
              </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
<h1>List of movie show</h1>
  <form action="/showtime/search" method="POST">
    <select class="form-select" aria-label="Default select example" name="TheaterId">
      <% theaters.forEach(function(theater) { %>
      <option value="<%- theater.id %>"><%- theater.Name %></option>
      <%})%>
    </select>
    <div class="md-3">
        <label for="input_starttime">Date Show</label>
        <input  type="datetime-local" id="input_starttime" name="dateshow" >
      </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
      <table class="table">
          <thead>
            <tr>
              <th scope="col">Name</th>
              <th scope="col">Begin Time</th>
              <th scope="col">Finish Time</th>
              <th scope="col">Theater Name</th>
              <th scope="col">Price</th>
            </tr>
          </thead>
          <tbody>
  
          <% showtimes.forEach(function(showtime) { %>
         
            <tr>
              <td><%- showtime.Movie.Name %></td>
              <td><%- showtime.TimeBegin %></td>
              <td><%- showtime.TimeFinish %></td>
              <td><%- showtime.Theater.Name %></td>
              <td><%- showtime.Price %></td>
           
               <td> <a class="btn btn-primary" href="/showtime/delete/<%- showtime.id %>" role="button">Del</a></td>
            </tr>
          <% })%>
          </tbody>
        </table>
</div>
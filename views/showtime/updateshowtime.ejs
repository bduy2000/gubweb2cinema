	</style>
    <div class="container-contact100">
        
		<div class="wrap-contact100">
            <button style="height: 30px; width: 30px; margin-left: 0.2cm; margin-top: 0.2cm;" type="button" onclick="window.location.href='/showtime'">X</button>
                 <center>
				<span class="contact100-form-title" style="color: #000022; font-weight: bold;font-size:45px">
					Đăng ký Suất Chiếu
				</span>
                </center>

			<form action="/showtime/update/<%- showtime.id %>"  class="contact100-form validate-form" method="POST" > 
                <label for="movie" class="form-label">Movie</label>
				<div style="height: 30px;width: 300px" class="dropdown dropdown">
                    
                    <select id="movie" name="MovieId" class="dropdown-select">
                      <% movies.forEach(function(movie) { %>
                        <option value="<%- movie.id %>" <%- movie.id === showtime.MovieId ? 'selected' : '' %>><%- movie.Name %></option>
                        <%})%>
                    </select>
             	</div>
<br />
<label for="theater" class="form-label">Theater</label>
				<div style="height: 30px;width: 300px" class="dropdown dropdown">
                   
                    <select id="theater" name="TheaterId" class="dropdown-select">
                      <% theaters.forEach(function(theater) { %>
                        <option value="<%- theater.id %>" <%- theater.id === showtime.TheaterId ? 'selected' : '' %>><%- theater.Name %>,<%- theater.Cinema.Name%></option>
                        <%})%>
                    </select>
             	</div>
				 <br /> <br />
				 <br />
                 <p>Time Begin: <%- showtime.TimeBegin %></p>
				 <div class="wrap-input100 ">
					<span class="label-input100">Time Begin</span>
					<input type="time" name="timebegin">
				 </div>

                 <p>Date Show: <%- showtime.DateShow %></p>
                 <div class="wrap-input100 ">
                    <label for="input_starttime">Date Show</label>
                    <input  type="date" id="input_starttime" name="dateshow" >
                 </div>
                
                 <div class="wrap-input100 validate-input bg0 rs1-alert-validate">
					<span class="label-input100">Price</span>
					<input class="input100" type="number" name="price" placeholder="<%- showtime.Price %>" >
				</div>
                <div class="container-contact100-form-btn">
                    <button class="contact100-form-btn">
                        <span>
                            Submit
                        </span>
                    </button>
                </div>
            </form>
        </div>
    </div>

    
    


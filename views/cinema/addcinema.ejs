					<input class="input100" type="text" name="name" placeholder="Vui lòng điền tên của Cụm Rạp">
				</div>
			
				<div class="wrap-input100 validate-input bg0 rs1-alert-validate">
					<span class="label-input100">Address</span>
					<textarea class="input100" name="address" placeholder="Vui lòng điền địa chỉ của Cụm Rạp "></textarea>
				</div>

                <div class="container-contact100-form-btn">
                    <button class="contact100-form-btn" type="submit">
                        <span>
                            Submit
                        </span>
                    </button>
                </div>
            </form>
        </div>
    </div>


    
    


<link rel="stylesheet" type="text/css" href="/cinema/css/util.css">
<link rel="stylesheet" type="text/css" href="/cinema/css/main.css">
    <div class="container-contact100">
        
		<div class="wrap-contact100">
            <button style="height: 30px; width: 30px; margin-left: 0.2cm; margin-top: 0.2cm;" type="button" onclick="window.location.href='/cinema'">X</button>
                 <center>
				<span class="contact100-form-title" style="color: #000022; font-weight: bold;font-size:45px">
					Add Cinema
				</span>
                </center>

			<form action="/cinema/add"  class="contact100-form validate-form" method="POST" > 
                

				<div class="wrap-input100 validate-input bg0 rs1-alert-validate">
					<span class="label-input100">Name*</span>
					<input class="input100" type="text" name="name" placeholder="Vui lòng điền tên của Cụm Rạp" required>
				</div>
			
				<div class="wrap-input100 validate-input bg0 rs1-alert-validate">
					<span class="label-input100">Address</span>
					<textarea class="input100" name="address" placeholder="Vui lòng điền địa chỉ của Cụm Rạp " required></textarea>
				</div>
                <div class="wrap-input100 validate-input bg0 rs1-alert-validate">
                    <input class="form-check-input" type="checkbox" value="true" name="check" id="flexCheckDefault" <%- check === 'true' ? 'checked' : '' %>>
                    <label class="form-check-label" for="flexCheckDefault">
                      Check to continue add cinema
                    </label>
            </div>
                <div class="container-contact100-form-btn">
                    <button class="contact100-form-btn" type="submit">
                        <span>
                            Submit
                        </span>
                    </button>
                </div>
            </form>
        </div>
    </div>


    
    


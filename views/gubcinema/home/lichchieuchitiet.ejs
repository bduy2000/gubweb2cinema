<!--CONTENT-PAGE-->
<div class="content-page">         
            <!--SEARCH-BLOCK-->
            <div class="section-title">
                <h2>Lịch chiếu : Ngày <%- date %></h2>
            </div>
            
    <!--CINERMA - SYSTEM-->

    <!--SCHECULE - LIST-->
    <div class="schedule-list-content">
       
        <div class="schedule-list-wrap">
            <div class="schedule-block">
                <div class="schedule-block-load">
                    <button class="schedule-btn" onclick="location.href='/GUB/lichchieuchitiet/<%- id %>/2021-05-20'">20-5</button>
                    <button class="schedule-btn" onclick="location.href='/GUB/lichchieuchitiet/<%- id %>/2021-05-21'">21-5</button>
                    <button class="schedule-btn" onclick="location.href='/GUB/lichchieuchitiet/<%- id %>/2021-05-22'">22-5</button>
                    <button class="schedule-btn" onclick="location.href='/GUB/lichchieuchitiet/<%- id %>/2021-05-23'">23-5</button>
                    <button class="schedule-btn" onclick="location.href='/GUB/lichchieuchitiet/<%- id %>/2021-05-24'">24-5</button>
                    <button class="schedule-btn" onclick="location.href='/GUB/lichchieuchitiet/<%- id %>/2021-05-25'">25-5</button>
                    <button class="schedule-btn" onclick="location.href='/GUB/lichchieuchitiet/<%- id %>/2021-05-26'">26-5</button>
                </div>
            </div>
            <% movies.forEach(function(movie) { %>
            <div class="schedule-detail-content">
                <div class="schedule-detail-wrap">
                    <!--FILM-BLOCK-->
                    <div class="film-block">

                        <div class="film-item t-3d">
                            <div class="film-item-pic">
                                <img src="/GUB/movie/picture/<%- movie.id %>" alt="BỐ GIÀ (C13)">
                            </div>
                            <div class="film-item-txt">
                                <h3><%- movie.Name %></h3>
                                <!--SCHECULE-BLOCK-->
                                <div class="schedule-block">
                                    <div class="schedule-block-load" style="opacity: 1;">
                                        <% movie.ShowTimes.forEach(function(item) { %>
                                        <button class="schedule-btn"><%- item.TimeBegin %></button>
                                        <% })%>
                                    </div>
                                </div>
                                <!--SCHECULE-BLOCK-->

                            </div>
                        </div>

                    </div>
                    <!--FILM-BLOCK-->

                </div>
            </div>
            <% })%>
        </div>
    </div>

    <!--SCHECULE - LIST-->



    <!--PROMOTION-SECTION-->

</div>

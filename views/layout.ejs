 
<!DOCTYPE html>
<html lang="en">
<head>
	<title> <%-title%></title>
	<meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0" crossorigin="anonymous">
</head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="/GUB/home">GUB</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link <%- title === 'Home' ? 'active' : '' %>" aria-current="page" href="/GUB/home">Home</a>
            </li>
            
              <% if(currentUser){ %>
              <li class="nav-item">
                <a class="nav-link <%- title ===  currentUser.Name ? 'active' : '' %>" href="/GUB/profile"><%- currentUser.Name %></a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/GUB/profile/logout">Log out</a>
              </li>
              <% if(currentUser.Category == 'admin'){ %>
                <li class="nav-item">
                  <a class="nav-link <%- title ===  'Admin' ? 'active' : '' %>" href="/GUB/admin">Admin</a>
                </li>
                <%}%>
              <%}else{%>
                <li class="nav-item">
                  <a class="nav-link <%- title === 'Log in' ? 'active' : '' %>" href="/GUB/user/login">Log in</a>
                </li>
                
                <li class="nav-item dropdown">
                  <a class="nav-link dropdown-toggle <%- title === 'Register' ? 'active' : '' %>" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    Register
                  </a>
                  <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <li><a class="dropdown-item" href="/GUB/user/admin/register">Admin</a></li>
                    <li><a class="dropdown-item" href="/GUB/user/customer/register">Customer</a></li>
                  </ul>
                </li>
               
              <%}%>
          </ul>
          <form class="d-flex">
            <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-light" type="submit">Search</button>
          </form>
        </div>
      </div>
    </nav>
  <%-body%>


    </body>
  </html>
 
<!DOCTYPE html>
<html lang="en">
<head>
	<title> Insert</title>
	<meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0" crossorigin="anonymous">
</head>
<body>
    <div class="container-contact100">
		<div class="wrap-contact100">
                 <center>
				<span class="contact100-form-title" style="color: #000022; font-weight: bold;font-size:45px">
					Quản Lý Phim
				</span>
                </center>

				<div class="container-fluid">

					<!-- Page Heading -->
					<h1 class="h3 mb-2 text-gray-800">Phim
						<a href="dangkyphim.html" class="btn btn-success btn-circle pull-left">
							<i>+</i>
						</a>
					</h1>
				
					<!-- DataTales Example -->
					<div class="card shadow mb-4">
						<div class="card-body">
							<div class="table-responsive">
								<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
									<thead>
									<tr>
										<th>ID</th>
										<th>Tên Phim</th>
										<th>Ngày Công Chiếu</th>
										<th>Thời lượng</th>
										<th>Poster</th>
										<th>Sửa</th>
										<th>Xóa</th>
										
									</tr>
									</thead>
									<tfoot>
									<tr>
										<th>ID</th>
										<th>Tên Phim</th>
										<th>Ngày Công Chiếu</th>
										<th>Thời lượng</th>
										<th>Poster</th>
										<th>Sửa</th>
										<th>Xóa</th>
										
									</tr>
				
									</tfoot>
									<tbody>
								
									<tr>
										<td><%= item.id %></td>
										<td><%= item.TenCum %></td>
										<td><%= item.NgayCongChieu %></td>
										<td><%= item.ThoiLuong %></td>
										<td><%= item.Poster %></td>
										
										<td>
											<form method="POST" action="/insert/suacumrap/<%= item.id %>">
												<button type="submit" class="btn btn-primary btn-circle btn-sm"><i
															class="fas fa-trash"></i>
												</button>
											</form>
										</td>
										<td>
											<form method="POST" action="/insert/xoacumrap/<%= item.id %>">
												<button type="submit" class="btn btn-danger btn-circle btn-sm"><i
															class="fas fa-trash"></i>
												</button>
											</form>
										</td>
										

									</tr>
								
									</tbody>
								</table>
							</div>
						</div>
					</div>
				
				</div>
	
				
				</div>
    </div>

    
    
</body>
